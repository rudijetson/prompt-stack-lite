{
  "name": "pstack-cli",
  "version": "2.0.0",
  "description": "Prompt Stack CLI - Package and runtime management",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "pstack": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "build": "esbuild src/index.js --bundle --platform=node --format=cjs --outfile=index.cjs --external:better-sqlite3",
    "test": "node --test src/__tests__/",
    "legacy": "node index.cjs"
  },
  "dependencies": {
    "@prompt-stack/core": "workspace:*",
    "@prompt-stack/env": "workspace:*",
    "@prompt-stack/manifest": "workspace:*",
    "@prompt-stack/registry-client": "workspace:*",
    "@prompt-stack/runner": "workspace:*",
    "better-sqlite3": "^12.5.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prompt-stack/cli.git"
  },
  "license": "MIT"
}
